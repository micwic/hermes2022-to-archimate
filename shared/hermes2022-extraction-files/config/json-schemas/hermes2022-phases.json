{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HERMES2022 Phases Schema",
  "description": "Schéma pour la validation des phases HERMES2022 extraites",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "extractionDate": {
          "type": "string",
          "format": "date",
          "description": "Date d'extraction des phases"
        },
        "source": {
          "type": "string",
          "enum": ["hermes.admin.ch"],
          "description": "Source de référence pour l'extraction"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Version du schéma"
        }
      },
      "required": ["extractionDate", "source", "version"]
    },
    "phases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ph_[a-z0-9]{6}$",
            "description": "Identifiant unique de la phase (format: ph_abc123)"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Nom de la phase en anglais"
          },
          "order": {
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)*$",
            "description": "Ordre hiérarchique de la phase (ex: 1, 2, 2.1, 2.2, 2.3, 3)"
          },
          "type": {
            "type": "string",
            "enum": ["simple", "composite"],
            "description": "Type de phase : simple ou composite (regroupant plusieurs sous-phases)"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 2000,
            "description": "Description détaillée de la phase et de ses objectifs"
          },
          "context": {
            "type": "string",
            "minLength": 10,
            "maxLength": 1000,
            "description": "Contexte et articulation de la phase dans le cycle de vie du projet"
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5,
              "maxLength": 200
            },
            "description": "Liste des résultats attendus de la phase"
          },
          "milestones": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5,
              "maxLength": 200
            },
            "description": "Points de contrôle et jalons de la phase"
          },
          "approach": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["traditional", "agile", "both"]
            },
            "description": "Approches supportées par la phase (traditionnelle, agile, ou les deux)"
          }
        },
        "required": ["id", "name", "order", "type", "description", "context", "approach"]
      },
      "minItems": 1,
      "description": "Liste des phases HERMES2022"
    }
  },
  "required": ["metadata", "phases"]
}
